<%= link_to post, class: "list-group-item list-group-item-action py-3 py-md-4" do %>
  <div class="row align-items-top">
    <div class="col pe-0">
      <h2 class="h5 text-body"><%= post.title %></h2>

      <div class="ms-auto">
        <p class="text-body-secondary small">Posted on <%= post.created_at.strftime("%B %d") %></p>
      </div>

      <p class="line-clamp-2 text-body-secondary mb-0"><%= post.body %></p>
    </div>

    <div class="col d-md-none flex-grow-0 flex-shrink-1 px-2 my-auto">
      <i class="bi bi-chevron-right text-body-tertiary"></i>
    </div>
  </div>
<% end %>
